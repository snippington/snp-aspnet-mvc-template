<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - SampleWebApp</title>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/spectre.css" />
    <link rel="stylesheet" href="/css/spectre-exp.min.css" />
    <link rel="stylesheet" href="/css/spectre-icons.min.css" >
</head>
<body>
    @RenderSection("scripts", required: false)
    <div class="columns gapless">

        <div class="column col-12 shadow navline">
            <header class="navbar px-8">
                <section class="navbar-section">
                    <a href="..." class="navbar-brand mr-2">SamplerApp</a>
                    <div class="dropdown">
                        <div class="btn-group"><a class="btn btn-link">Pages</a><a class="btn btn-link dropdown-toggle" tabindex="0"><i class="icon icon-caret"></i></a>
                            <ul class="menu">
                                <li class="menu-item"><a href="/sample">Sample</a></li>
                                <li class="menu-item"><a href="/sampleprogram">Sample Program</a></li>
                                <li class="menu-item"><a href="/socialpost">Social Post</a></li>
                            </ul>
                        </div>
                    </div>

                </section>
                <section class="navbar-section">
                    <partial name="_LoginPartial" />
                </section>
            </header>
        </div>


        <div class="container">
            <div class="columns col-12 px-8" >
                <div class="column col-12 mt-8">
                    @RenderBody()
                </div>
            </div>
        </div>

        <div class="column">
            <div class="column col-6 col-mx-auto text-center mt-8">
                &copy; 2024 - SampleWebApp
            </div>
        </div>
    </div>
</body>
</html>